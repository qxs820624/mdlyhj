<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content" 
	android:background="@drawable/background"  
	android:orientation="vertical" android:gravity="center_horizontal">
	<LinearLayout android:layout_width="wrap_content" android:id="@+id/bg"
		android:layout_height="wrap_content" android:background="@drawable/spinner1"
		android:clickable="true"  android:gravity="center_vertical" android:layout_marginTop="20dip" >
		<ImageView android:src="@drawable/iconphoto"  android:layout_marginLeft="60dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text="选择背景：" android:layout_width="wrap_content" android:layout_marginLeft="10dip"
			android:layout_height="wrap_content"  android:textColor="#854a2a"/>
		<TextView android:id="@+id/bgtext" android:layout_width="wrap_content"  android:textColor="#854a2a"
			android:layout_height="wrap_content"  android:text="默认" />
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content" android:id="@+id/music"
	android:clickable="true"
	    android:background="@drawable/spinner1"
		android:layout_height="wrap_content" android:layout_marginTop="15dip" android:gravity="center_vertical">
		<ImageView android:src="@drawable/iconmusic"   android:layout_marginLeft="60dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text="选择音乐：" android:layout_width="wrap_content" android:layout_marginLeft="10dip"  android:textColor="#854a2a"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/musictext" android:layout_width="wrap_content"  android:textColor="#854a2a"
			android:layout_height="wrap_content"  android:text="无"/>
	</LinearLayout>
		<LinearLayout android:layout_width="wrap_content" android:id="@+id/wether"
		android:clickable="true"
	    android:background="@drawable/spinner1"
		android:layout_height="wrap_content" android:layout_marginTop="15dip" android:gravity="center_vertical">
		<ImageView android:src="@drawable/iconwether"   android:layout_marginLeft="60dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text="选择天气：" android:layout_width="wrap_content" android:layout_marginLeft="10dip"   android:textColor="#854a2a"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/wethertext" android:layout_width="wrap_content"   android:textColor="#854a2a"
			android:layout_height="wrap_content"  android:text="晴天"/>
	</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"  android:id="@+id/date"
		android:clickable="true"
	    android:background="@drawable/spinner1"
		android:layout_height="wrap_content" android:layout_marginTop="15dip" android:gravity="center_vertical">
		<ImageView android:src="@drawable/icondate"   android:layout_marginLeft="60dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:text="选择时间：" android:layout_width="wrap_content" android:layout_marginLeft="10dip"   android:textColor="#854a2a"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/datetext" android:layout_width="wrap_content"   android:textColor="#854a2a"
			android:layout_height="wrap_content" android:text="上午" />
	</LinearLayout>
	<Button 
	  android:id="@+id/sureadd"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:textColor="#854a2a"
	  android:background="@drawable/buttonpress1"
	  android:layout_marginTop="30dip"
	  android:text="确定"
	/>
</LinearLayout>
