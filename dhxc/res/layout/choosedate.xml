<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/selectdate"
		android:gravity="center">
		<TextView android:layout_width="fill_parent"
			android:layout_height="15dip" android:clickable="false"
			android:background="@android:color/transparent" />
		<Button android:id="@+id/amb" android:layout_width="wrap_content"
			android:layout_height="18dip" />
		<Button android:id="@+id/noonb" android:layout_marginTop="20dip"
			android:layout_width="wrap_content" android:layout_height="18dip" />
		<Button android:id="@+id/pmb" android:layout_marginTop="20dip"
			android:layout_width="wrap_content" android:layout_height="18dip" />
		<Button android:id="@+id/nightb" android:layout_marginTop="20dip"
			android:layout_width="wrap_content" android:layout_height="18dip" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="15dip" android:clickable="false"
			android:background="@android:color/transparent" />
				<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_gravity="bottom">
		<Button android:id="@+id/datesure" android:layout_width="wrap_content"
		android:layout_weight="1" android:text="确定"
			android:layout_height="wrap_content" android:background="@drawable/myroute1"
			android:layout_marginTop="20dip" />
		<Button android:id="@+id/datecancle" android:layout_width="wrap_content" 	android:layout_weight="1"
			android:layout_height="wrap_content" android:background="@drawable/myroute1" android:layout_marginLeft="5dip"
		android:layout_marginTop="20dip"   android:text="取消"/>
	</LinearLayout>
	</LinearLayout>

</LinearLayout>
