<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/list_item_background_1">
	<TextView android:id="@+id/item_id" android:text="A"
		android:gravity="center" android:textColor="#777777" android:textSize="30dip"
		android:textStyle="bold" android:layout_width="30dip"
		android:layout_height="wrap_content" />
	<LinearLayout android:layout_width="fill_parent"
		android:paddingTop="6dip" android:paddingBottom="6dip"
		android:layout_height="wrap_content" android:orientation="vertical">
		<TextView android:id="@+id/item_title" android:text="mcdonalds"
			android:textColor="#777777" android:textSize="16dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/item_add_tip" android:text="地址:"
				android:textColor="#777777" android:textSize="16dip"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/item_add" android:text="baiziwan"
				android:textColor="#777777" android:textSize="16dip"
				android:textStyle="bold" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:id="@+id/item_phone_tip" android:text="电话:"
				android:textColor="#777777" android:textSize="16dip"
				android:textStyle="bold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
			<TextView android:id="@+id/item_phone" android:text="010-6777777"
				android:textColor="#777777" android:textSize="16dip"
				android:textStyle="bold" android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>