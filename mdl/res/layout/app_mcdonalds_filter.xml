<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/dialog_bg_filter" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:layout_marginLeft="10dip"
	android:layout_marginRight="10dip" android:layout_marginTop="40dip"
	android:layout_marginBottom="40dip">
	<!-- -->
	<TextView android:id="@+id/detail_title" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="16dip"
		android:textSize="16dip" android:textColor="#cb0c0c"
		android:layout_marginLeft="80dip" android:text="请选择需要购买的单品" />
	<RelativeLayout android:id="@+id/detail_bottom"
		android:paddingLeft="20dip" android:paddingRight="20dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<ImageButton android:id="@+id/btn_ok"
			android:layout_width="80dip" android:layout_height="35dip"
			android:scaleType="centerInside" android:src="@drawable/btn_ok"
			android:background="@drawable/btn_sel_background" />
		<ImageButton android:id="@+id/btn_cancel"
			android:layout_width="80dip" android:layout_height="35dip"
			android:scaleType="centerInside" android:layout_alignParentRight="true"
			android:src="@drawable/btn_cancel" android:background="@drawable/btn_sel_background" />
	</RelativeLayout>
	<!-- -->
	<ListView android:id="@+id/list_view" android:layout_margin="10dip"
		android:scrollbarThumbVertical="@drawable/scroll_bar"
		android:layout_below="@id/detail_title" android:layout_above="@id/detail_bottom"
		android:layout_width="fill_parent" android:listSelector="@drawable/list_item_background_0"
		android:divider="#00000000"  android:layout_height="fill_parent"
		android:background="@drawable/dialog_list_bg2" />
</RelativeLayout>