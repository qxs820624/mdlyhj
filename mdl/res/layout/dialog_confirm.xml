<?xml version="1.0" encoding="utf-8"?>
<!-- -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dip" android:layout_height="wrap_content">
	<LinearLayout android:orientation="vertical"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:background="@drawable/dialog_bg">
		<TextView android:id="@+id/tv_title" android:layout_width="fill_parent"
			android:text="当前版本：" android:layout_height="wrap_content"
			android:textStyle="bold" android:textSize="16dip" android:textColor="#2e2e2e"
			android:layout_margin="10dip" />
		<!-- -->
		<TextView android:id="@+id/tv_tip" android:layout_width="fill_parent"
			android:layout_height="200dip" android:textStyle="bold"
			android:textSize="16dip" android:gravity="center" android:textColor="#2e2e2e"
			android:layout_marginBottom="10dip" />
		<!-- -->
		<LinearLayout android:id="@+id/btn_panel"
			android:layout_gravity="bottom" android:gravity="center"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<ImageButton android:id="@+id/btn_ok"
				android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
				android:layout_width="80dip" android:layout_height="35dip"
				android:scaleType="centerInside" android:src="@drawable/btn_ok"
				android:background="@drawable/btn_sel_background" />
			<ImageButton android:id="@+id/btn_cancel"
				android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
				android:layout_width="80dip" android:layout_height="35dip"
				android:scaleType="centerInside" android:src="@drawable/btn_cancel"
				android:background="@drawable/btn_sel_background" />
		</LinearLayout>
	</LinearLayout>
	<!-- -->
	<ProgressBar android:id="@+id/progressImage"
		android:layout_gravity="center" style="@android:style/Widget.ProgressBar.Inverse"
		mce_style="@android:style/Widget.ProgressBar.Inverse"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</FrameLayout>