<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<include layout="@layout/include_bg_skin" />
	<include layout="@layout/include_header" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:paddingLeft="44px" android:paddingTop="100px">
		<FrameLayout android:id="@+id/skin_btn_1"
			android:layout_marginTop="40px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/skin_btn_bg"
			android:clickable="true">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/skin_item_1"
				android:gravity="center" android:textSize="18px" android:text="蓝色妖姬"></TextView>
		</FrameLayout>
		<FrameLayout android:id="@+id/skin_btn_2"
			android:layout_marginTop="40px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/skin_btn_bg"
			android:clickable="true">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/skin_item_2"
				android:gravity="center" android:textSize="18px" android:text="天空之城"></TextView>
		</FrameLayout>
		<FrameLayout android:id="@+id/skin_btn_3"
			android:layout_marginTop="40px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/skin_btn_bg"
			android:clickable="true">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/skin_item_3"
				android:gravity="center" android:textSize="18px" android:text="粉嫩透明"></TextView>
		</FrameLayout>
		<FrameLayout android:id="@+id/skin_btn_4"
			android:layout_marginTop="40px" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@drawable/skin_btn_bg"
			android:clickable="true">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/skin_item_4"
				android:gravity="center" android:textSize="18px" android:text="黑色诱惑"></TextView>
		</FrameLayout>
	</LinearLayout>
</FrameLayout>
