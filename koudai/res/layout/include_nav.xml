<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/edit_menu_bg" android:gravity="center">
	<LinearLayout android:id="@+id/nav_home_panel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical">
		<Button android:id="@+id/nav_icon" android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/nav_btn_home_background" />
		<TextView android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/nav_home" android:textColor="#88FFFFFF"
			android:textSize="16px"/>
	</LinearLayout>
	<LinearLayout android:id="@+id/nav_camera_panel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical">
		<Button android:id="@+id/nav_icon" android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/nav_btn_camera_background" />
		<TextView android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/nav_camera" android:textColor="#88FFFFFF"
			android:textSize="16px" />
	</LinearLayout>
	<LinearLayout android:id="@+id/nav_local_panel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_weight="1" android:orientation="vertical">
		<Button android:id="@+id/nav_icon" android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/nav_btn_local_background" />
		<TextView android:layout_gravity="center"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/nav_local" android:textColor="#88FFFFFF"
			android:textSize="16px" />
	</LinearLayout>
</LinearLayout>