<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="50dip" android:background="@drawable/top">
		<ImageButton android:id="@+id/backmysave"
			android:background="@drawable/iconbackshowroute"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|left"
			android:layout_marginLeft="10dip" />
		<TextView android:layout_height="wrap_content" android:id="@+id/tv"
			android:layout_gravity="center" android:text="我的收藏"
			android:textColor="#fffeed" android:textSize="20dip"
			android:layout_width="wrap_content" />
	</FrameLayout>
	       <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
	<ListView 
	android:id="@+id/savelv"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"	
    android:background="#fffeed"
		android:cacheColorHint="#00000000" android:divider="#f6dbc0"
		android:dividerHeight="2dp"
	></ListView>
		<LinearLayout 
	android:orientation="vertical" android:layout_width="match_parent"
	android:id="@+id/llsave" android:layout_height="match_parent"
	android:gravity="center" android:visibility="gone"
	>
	<ImageView 
	 android:layout_width="154px"
			android:layout_height="154px" android:layout_gravity="center"
			android:src="@drawable/iconseven"
	/>
	<TextView 
	android:text="暂无收藏！"
	android:textSize="20dip"
	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#5b5b5b"
	/>
	</LinearLayout>
	</FrameLayout>
</LinearLayout>
