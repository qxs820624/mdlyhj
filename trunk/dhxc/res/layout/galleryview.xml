<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:id="@+id/layout"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/background">
	<FrameLayout android:layout_width="fill_parent"
		android:layout_height="50dip">
		<TextView android:layout_width="fill_parent"
			android:layout_height="50dip" android:id="@+id/tv" android:gravity="center"
			android:text="浏览图片" android:textColor="#ffffff" android:textSize="25dip"
			android:background="@drawable/top" />
		<ImageButton android:id="@+id/backliulan"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:background="@drawable/iconbackshowroute" android:layout_gravity="center_vertical|left"
			android:layout_marginLeft="10dip" />
		<ImageButton android:id="@+id/editsmall"
			android:background="@drawable/editsmallpress" android:layout_gravity="center_vertical|right"
			android:layout_marginRight="10dip"  android:layout_width="30dp" android:layout_height="30dp"/>
	</FrameLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_marginTop="10dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/xinqing" android:layout_width="200dip"
			android:layout_height="wrap_content" android:singleLine="true"
			android:textColor="#480f0f" android:layout_marginLeft="40dip"
			android:textSize="20dip" android:gravity="center_horizontal"
			android:ellipsize="marquee" android:focusableInTouchMode="true"
			marqueeRepeatLimit="marquee_forever" android:focusable="true"
			android:text="提示：您现在可以通过编辑，来为这张靓照添加心情哦！" />
		<Button android:id="@+id/setmusic" android:layout_width="wrap_content"
			android:layout_marginLeft="10dip" android:background="#0000"
			android:layout_weight="0.31" android:layout_height="46dp"/>
	</LinearLayout>
	<LinearLayout 
         android:orientation="vertical"
         android:layout_width="fill_parent" android:background="#0000"
         android:gravity="center"
		 android:layout_height="300dip">
	<ImageView android:id="@+id/showimg" 
		android:padding="10px"
		android:layout_gravity="center_horizontal" 
		android:scaleType="center" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	 </LinearLayout>
	<Gallery android:id="@+id/gallery" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:spacing="3dip"  android:layout_marginTop="10dip"
	 />
</LinearLayout>
