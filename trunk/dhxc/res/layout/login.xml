<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/myroutebg"
  >
   <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
    <TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv"
    android:gravity="center"
    android:text="用户登录"
    android:textColor="#ffffff"
    android:textSize="20dip"
    android:background="@drawable/top"
    />
    <ImageButton 
    android:id="@+id/backlogin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/iconbackshowroute"
     android:layout_gravity="center_vertical|left"
     android:layout_marginLeft="15dip"
    />
    </FrameLayout>  
    <LinearLayout 
    android:layout_marginTop="20dip"
     android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="用户名："
    />
    <EditText 
    android:id="@+id/username"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextbg"
    />
    </LinearLayout> 
        <LinearLayout 
    android:layout_marginTop="20dip"
     android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="密码    ："
    />
    <EditText 
    android:id="@+id/userpassword"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
     android:background="@drawable/edittextbg"
    />
    </LinearLayout> 
        <LinearLayout 
    android:layout_width="fill_parent"  
     android:gravity="bottom" 
    android:layout_marginTop="30dip"
     android:layout_height="wrap_content">
    <Button
    android:id="@+id/loginbnt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="登录"
      android:layout_marginLeft="15dip"
      android:background="@drawable/buttonpress1"
    />
    <Button android:id="@+id/registerbnt" 
    android:text="注册"
    android:layout_width="wrap_content"
     android:layout_height="wrap_content" 
 android:background="@drawable/buttonpress1"
       android:layout_marginLeft="65dip"
        android:layout_gravity="right"
   ></Button>
    </LinearLayout>
</LinearLayout>
