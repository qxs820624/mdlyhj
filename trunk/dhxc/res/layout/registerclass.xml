<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@drawable/myroutebg"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     >
    <TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tv"
    android:gravity="center"
    android:text="编辑图片"
   android:textColor="#fffeed"
    android:textSize="20dip"
    android:background="@drawable/top"
    />
    <ImageButton 
    android:id="@+id/backregist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/iconbackshowroute"
     android:layout_gravity="center_vertical|left"
     android:layout_marginLeft="15dip"
    />
    </FrameLayout>  
    <LinearLayout 
    android:layout_marginTop="20dip"
     android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="用户名："
    />
    <EditText 
    android:id="@+id/reusername"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
       android:background="@drawable/edittextbg"
    />
    </LinearLayout> 
    <TextView 
        android:layout_marginTop="4dip"
    android:layout_marginLeft="90dip"
    android:textSize="12dip"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/prompt"
    android:text="中文、英文或数字不得超过20字符"
    />
        <LinearLayout 
    android:layout_marginTop="20dip"
     android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="密码    ："
    />
    <EditText 
    android:id="@+id/reuserpassword"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
       android:background="@drawable/edittextbg"
    />
    </LinearLayout> 
      <TextView 
        android:layout_marginTop="4dip"
    android:layout_marginLeft="90dip"
    android:textSize="12dip"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/prompt"
    android:text="英文或数字 最少6~8个字符"
    />
       <LinearLayout 
    android:layout_marginTop="20dip"
     android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="重复    ："
    />
    <EditText 
    android:id="@+id/repeatuserpassword"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
       android:background="@drawable/edittextbg"
    />
    </LinearLayout> 
      <TextView 
        android:layout_marginTop="4dip"
    android:layout_marginLeft="90dip"
    android:textSize="12dip"
      android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/prompt"
    android:text="请您再次输入您的密码"
    />
       <LinearLayout 
    android:layout_marginTop="20dip"
     android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="邮箱    ："
    />
    <EditText 
    android:id="@+id/mail"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
       android:background="@drawable/edittextbg"
    />
    </LinearLayout> 
      <TextView 
    android:layout_marginTop="4dip"
    android:layout_marginLeft="90dip"
    android:textSize="12dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableLeft="@drawable/prompt"
    android:text="请输入您的电子邮箱"
    />
    <Button 
    android:layout_marginTop="50dip"
    android:id="@+id/resure"
     android:textColor="#ffffff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:text="注册"
       android:layout_gravity="center_horizontal"
      android:background="@drawable/buttonpress1"
    />
</LinearLayout>
