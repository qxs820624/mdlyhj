<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="188px"
  android:layout_height="wrap_content">
    <ImageView 
    android:id="@+id/xiangceiv"
    android:layout_width="204px"
    android:layout_height="182px"
    android:background="@drawable/xiangcebg"
    />
    <TextView 
    android:id="@+id/xiangcetv"
    android:textColor="#858585"
    android:textSize="18px"
    android:layout_width="204px"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:gravity="center"
	android:ellipsize="marquee" 
	android:focusableInTouchMode="true"
	marqueeRepeatLimit="marquee_forever" 
	android:focusable="false"
    android:background="@drawable/xiangcebg2"
    />
    <Button 
    android:layout_marginTop="10dip"
    android:layout_marginLeft="8dip"
    android:id="@+id/shangchuanxiangce"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:focusable="false"
    />
</LinearLayout>
