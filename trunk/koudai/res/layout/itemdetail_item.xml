<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chuangyu.music"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:gravity="center_horizontal"
	android:paddingLeft="20px" android:paddingRight="20px">
	<cn.duome.fotoshare.view.ScrollViewEx
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:scrollbars="none">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:gravity="center_horizontal">
			<ImageView android:id="@+id/iv_thumb" android:layout_width="fill_parent"
				android:layout_height="500px" android:scaleType="centerInside" 
				android:src="@drawable/default_image_loading"/>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:padding="20px">
				<LinearLayout android:id="@+id/love_panel"
					android:clickable="true" android:layout_weight="1"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center">
					<ImageButton android:id="@+id/ib_love"
						android:clickable="false" android:layout_gravity="center"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/btn_love_un_background" />
					<TextView android:id="@+id/tv_love" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_gravity="center"
						android:layout_marginLeft="4px" android:textColor="#FF919191" />
				</LinearLayout>
				<LinearLayout android:id="@+id/wb_panel"
					android:clickable="true" android:layout_weight="1"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center">
					<ImageButton android:id="@+id/ib_wb"
						android:clickable="false" android:layout_gravity="center" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:background="@drawable/btn_wb_background" />
					<TextView android:id="@+id/tv_wb" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_gravity="center"
						android:layout_marginLeft="4px" android:textColor="#FF919191"
						android:visibility="gone" />
				</LinearLayout>
				<LinearLayout android:id="@+id/fav_panel"
					android:clickable="true" android:layout_weight="1"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:gravity="center">
					<ImageButton android:id="@+id/ib_fav"
						android:clickable="false" android:layout_gravity="center"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:background="@drawable/btn_fav_un_background" />
					<TextView android:id="@+id/tv_fav" android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:layout_gravity="center"
						android:layout_marginLeft="4px" android:textColor="#FF919191" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:id="@+id/comments_panel"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical">
				<!-- 评论列表 -->
			</LinearLayout>
		</LinearLayout>
	</cn.duome.fotoshare.view.ScrollViewEx>
</LinearLayout>