<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="144px" android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/thumb_item_background"
	android:layout_marginTop="12px"
	android:clickable="true">
	<cn.duome.fotoshare.view.FlowView
		android:id="@+id/waterfall_image" android:layout_width="140px"
		android:layout_height="wrap_content" 
		android:scaleType="fitXY" />
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="4px" android:gravity="center_vertical"
		android:background="#FFFFFFFF">
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/icon_love" />
		<TextView android:id="@+id/tv_love" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:textColor="#FF393939" android:textSize="16px" android:text="0"
			android:layout_marginLeft="2dip" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/icon_comm" />
		<TextView android:id="@+id/tv_comm" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:textColor="#FF393939" android:textSize="16px" android:text="0"
			android:layout_marginLeft="2dip" />
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/icon_fav" />
		<TextView android:id="@+id/tv_fav" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FF393939"
			android:textSize="16px" android:text="0" android:layout_marginLeft="2dip" />
	</LinearLayout>
</LinearLayout>