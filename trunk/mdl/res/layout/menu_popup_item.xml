<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu_item" android:gravity="center_vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<ImageView android:id="@+id/item_menu_icon"
		android:layout_width="26dip" android:layout_height="26dip" />
	<TextView android:id="@+id/item_menu_text" android:text="title"
		android:gravity="center_vertical" android:layout_width="fill_parent"
		style="@style/grid_item_style"
		android:layout_height="wrap_content" android:padding="10dip" />
</LinearLayout>
