<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/nav_panel" android:layout_width="fill_parent"
	android:background="@drawable/nav_bar_bg" android:layout_height="wrap_content"
	android:gravity="center_vertical">
	<!-- 菜单 -->
	<LinearLayout android:layout_width="wrap_content"
		android:layout_weight="1" android:background="@drawable/selection_menu_background"
		android:id="@+id/nav_menu_panel" android:gravity="center"
		android:clickable="true" android:layout_height="fill_parent"
		android:paddingRight="6dip">
		<ImageView android:id="@+id/nav_menu_icon"
			android:paddingRight="4dip"
			android:background="@drawable/nav_menu_background"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/nav_menu_text" android:text="@string/menu_text"
			android:gravity="center" style="@style/nav_text_style"
			android:layout_width="wrap_content" android:layout_height="fill_parent">
		</TextView>
	</LinearLayout>
	<!-- 收藏夹 -->
	<!-- <ImageView android:src="@drawable/selection_menu_divider" android:layout_gravity="left" 
		android:scaleType="fitXY" android:layout_width="wrap_content" android:layout_height="fill_parent" 
		/> -->
	<LinearLayout android:layout_width="wrap_content"
		android:layout_weight="1" android:background="@drawable/selection_menu_background"
		android:id="@+id/fav_title_panel" android:gravity="center"
		android:layout_height="fill_parent" android:paddingLeft="4dip"
		android:paddingRight="6dip">
		<ImageView android:id="@+id/nav_fav_icon"
			android:paddingRight="4dip" android:background="@drawable/nav_fav_background"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/nav_fav_text" android:gravity="center"
			android:text="@string/fav_title" android:layout_width="wrap_content"
			style="@style/nav_text_style" android:layout_height="fill_parent" />
	</LinearLayout>
	<!-- 搜索 -->
	<!-- <ImageView android:src="@drawable/selection_menu_divider" android:layout_gravity="left" 
		android:scaleType="fitXY" android:layout_width="wrap_content" android:layout_height="fill_parent" 
		/> -->
	<LinearLayout android:layout_width="wrap_content"
		android:gravity="center" android:layout_weight="1"
		android:background="@drawable/selection_menu_background" android:id="@+id/search_title_panel"
		android:layout_height="fill_parent">
		<ImageView android:id="@+id/nav_search_icon"
			android:background="@drawable/nav_search_background"
			android:paddingRight="4dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/nav_search_text" style="@style/nav_text_style"
			android:gravity="center" android:text="@string/search_title"
			android:layout_width="wrap_content" android:layout_height="fill_parent" />
	</LinearLayout>
	<!-- 更多 -->
	<!-- <ImageView android:src="@drawable/selection_menu_divider" android:layout_gravity="left" 
		android:scaleType="fitXY" android:layout_width="wrap_content" android:layout_height="fill_parent" 
		/> -->
	<LinearLayout android:layout_width="wrap_content"
		android:gravity="center" android:layout_weight="1" android:clickable="true"
		android:background="@drawable/selection_menu_background" android:id="@+id/btn_ad_more"
		android:layout_height="fill_parent">
		<ImageView android:background="@drawable/nav_more_background"
			android:focusableInTouchMode="false" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>