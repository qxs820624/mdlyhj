<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:visibility="gone" android:padding="10dip" android:background="@drawable/tipbar_down_bg"
	android:orientation="vertical" android:id="@+id/search_panel"
	android:layout_height="wrap_content">
	<EditText android:layout_marginTop="10dip" android:id="@+id/et_search"
		android:hint="@string/reply_hint_text" android:layout_height="wrap_content"
		android:lines="2" android:inputType="none" android:layout_width="fill_parent"
		android:gravity="fill_horizontal" android:textAppearance="?android:attr/textAppearanceMedium" />
	<Button android:text="@string/ok_text" android:id="@+id/btn_search"
		android:layout_gravity="right" android:layout_marginTop="10dip"
		android:background="@drawable/btn_bg" android:textColor="#FFFFFFFF"
		android:layout_width="100dip" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>